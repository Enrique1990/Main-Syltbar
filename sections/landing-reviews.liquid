{{ 'landing-reviews.css' | asset_url | stylesheet_tag }}
<div class="landing-reviews pt68 pb110">
  <div class="container pt4 pb10">
    {% if section.settings.heading != blank %}
      <div class="landing-reviews-heading pb42">{{ section.settings.heading }}
      </div>
    {% endif %}
    <div class="landing-reviews-slider swiper">
      <div class="swiper-wrapper"> 
    {% for block in section.blocks %}
        <div class="item swiper-slide">
          <div class="item_wrapper">
            <ul class="star">
            {% assign range = (1..block.settings.star) %}
            {% for i in range %}
            <li><i class="fas fa-star"></i></li>
            {% endfor %}
            {% assign num = 5 | minus: block.settings.star %}
            {% assign range = (1..num) %}
            {% for i in range %}
            <li><i class="fas fa-star-o"></i></li>
            {% endfor %} 
            </ul>
            {% if block.settings.title != blank %}
            <div class="h2">{{ block.settings.title }}</div>
            {% endif %}
            {% if block.settings.text != blank %}
            <div class="h3">{{ block.settings.text }}</div>
            {% endif %}
            {% if block.settings.name != blank %}
            <div class="h6"> {{ block.settings.name }}</div>
            {% endif %}
          </div>
        </div>
    {% endfor %}
    </div>
  </div>
  </div>
</div>

{% schema %}
{
  "name": "Landing reviews",
  "tag": "section",
  "class": "section",
  "settings": [  
    {
        "type": "text",
        "id": "heading",
        "label": "t:sections.rich-text.blocks.heading.settings.heading.label"
      }
  ],
  "blocks": [

    {
      "type": "item",
      "name": "Item", 
      "settings": [
      {
        "type": "select",
        "id": "star",
        "label": "Star",
        "options": [
          {
            "value": "5",
            "label": "5"
          },
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "1",
            "label": "1"
          },
          {
            "value": "0",
            "label": "0"
          }
        ],
        "default": "5"
      },
      {
        "type": "text",
        "id": "title", 
        "label": "Title"
      },
      {
        "type": "text",
        "id": "text", 
        "label": "Text"
      },
      {
        "type": "text",
        "id": "name", 
        "label": "Name"
      }
      ]
    } 
  ],
  "presets": [
    {
      "name": "Landing reviews"
    }
  ]
}
{% endschema %}