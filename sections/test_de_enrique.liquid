<style>
  .reviews-grid {
  display: flex;
  flex-wrap: wrap;
}

.review-row {
  display: flex;
}

.review-block {
  flex: 0 0 25%; /* Adjust the width for each review block */
  padding: 10px;
  box-sizing: border-box;
}

.yellow-star {
  color: yellow;
}

.gray-star {
  color: gray;
}

</style>
{% if reviews.size > 0 %}
  <div class="reviews-grid">
    {% for review in reviews %}
      {% assign modulo_result = forloop.index0 | modulo: 4 %}
      {% if modulo_result == 0 %}
        <div class="review-row">
      {% endif %}

      <div class="review-block">
        <h3>{{ review.customer_name }}</h3>
        <p>{{ review.text }}</p>
        <div class="star-rating">
          {% for i in (1..5) %}
            {% if i <= review.rating %}
              <span class="yellow-star">&#9733;</span> <!-- Filled star -->
            {% else %}
              <span class="gray-star">&#9734;</span> <!-- Empty star -->
            {% endif %}
          {% endfor %}
        </div>
      </div>

      {% assign modulo_end = forloop.index | modulo: 4 %}
      {% if modulo_end == 0 or forloop.last %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
{% else %}
  <p>No reviews available.</p>
{% endif %}
