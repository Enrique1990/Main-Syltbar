<div class="page_faq p110">
  <div class="container">
    {% if section.settings.title != blank %}
      <h1 class="pb68">{{ section.settings.title }}</h1>
    {% endif %}
    <div class="row">
      <div class="col-lg-4 col-md-4">
        <ul class="faq_titles">
          {% assign count = 1 %}
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'header' %}
                {% if count == 7 %}
                  
                {% else %}
                  <li id="item_li_{{ count }}" class="h5 caps" onclick="show_faq_items({{ count }})">{{ block.settings.title }}</li>
                {% endif %}
                {% assign count = count | plus: 1 %}
            {% endcase %}
          {% endfor %}
          <div class="col-md-auto1">
          <a href="https://syltbar.com/pages/prosecco-wine-rose-distributors#item_6" class="faq-link" onclick="show_faq_items(6)">
            <h3 class="DH7 caps">BECOME A SYLTBAR DISTRIBUTOR</h3>
          </a>
        </div>
        </ul>
      </div>
      <div class="col-lg-8 col-md-8">
        {% assign count = 1 %}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'header' %}
              {% if count == 7 %}
                <div id="item_{{ count }}" class="h3 color_gold pt68">{{ block.settings.title }}</div>
              {% else %}
                <div id="item_{{ count }}" class="h3 color_gold pt68">{{ block.settings.title }}</div>
              {% endif %}
              {% assign count = count | plus: 1 %}
            {% when 'item' %}
              <div class="faq_block_item">
                <div class="item_title caps h5 m0">
                  {{ block.settings.title }}
                  <i class="fal fa-plus"></i>
                </div>
                <div class="item_text m0">
                  {{ block.settings.text }}
                </div>
              </div>
          {% endcase %}
        {% endfor %}
        <!-- <div class="col-md-auto1">
          <a href="https://syltbar.com/pages/prosecco-wine-rose-distributors#item_6" class="faq-link" onclick="show_faq_items(6)">
            <h3 class="DH7 caps">BECOME A SYLTBAR DISTRIBUTOR</h3>
          </a>
        </div> -->
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page",
  "tag": "section",
  "class": "section",
  "settings": [{
    "type": "text",
    "id": "title",
    "label": "Title"
  }],
  "blocks": [{
    "type": "header",
    "name": "Header",
    "settings": [{
      "type": "text",
      "id": "title",
      "label": "Header"
    }]
  }, {
    "type": "item",
    "name": "Item",
    "settings": [{
      "type": "text",
      "id": "title",
      "label": "Title"
    }, {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    }]
  }]
}
{% endschema %}
<script>
  document.addEventListener("DOMContentLoaded", function () {
    var colAuto1 = document.querySelector(".col-md-auto1");
    var faqTitles = document.querySelectorAll(".faq_titles .h5");

    colAuto1.addEventListener("click", function () {
      // Add active class to col-md-auto1
      colAuto1.classList.add("active");
      colAuto1.style.color = "#a4915c"; // Set color to active color
       colAuto1.style.color = "";


      // Remove active class from all other items and reset their colors
      faqTitles.forEach(function (item) {
        if (item !== colAuto1) {
          item.classList.remove("active");
          item.style.color = ""; // Reset other items' color
        }
      });
    });

    faqTitles.forEach(function (item) {
      item.addEventListener("click", function () {
        // Remove active class and reset color from col-md-auto1
        colAuto1.classList.remove("active");
        colAuto1.style.color = "";

        // Add active class and set color to the clicked item
        item.classList.add("active");
        item.style.color = "#a4915c";
         item.style.color = "";

      });
    });
  });
</script>